  "version": "0.2.0",
  "configurations": [
    {
      // Run nodemon server.js
      "type": "node",
      "request": "launch",
      "name": "Launch CICS CMCI Mock Server with Nodemon",
      "runtimeExecutable": "nodemon",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/server.js",
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}